    "@types/jest": "^26.0.20",
    "@types/node": "^15.12.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "dotenv": "^16.0.0",
    "eslint": "^7.30.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^26.5.0",
